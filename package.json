{
  "name": "typescript-react-express-boilerplate",
  "version": "1.0.0",
  "description": "react boilerplate using typescript",
  "main": "server/index.js",
  "scripts": {
    "dev": "run-p dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon --watch server server/index.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "test": "jest",
    "webpack": "webpack --config ./client/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robert-hamilton36/Typescript-React-Express-Boilerplate.git"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "setupFiles": [
      "./client/testing/setup/jsdom.js",
      "./client/testing/setup/enzyme.js"
    ]
  },
  "author": "Me",
  "license": "ISC",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "eda",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "bundle.js"
    ],
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.13.16",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.24.0",
    "eslint-config-eda": "^0.1.4",
    "jest": "^26.6.3",
    "jsdom": "^16.5.3",
    "mini-css-extract-plugin": "^1.5.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "sass": "^1.32.11",
    "sass-loader": "^11.0.1",
    "supertest": "^6.1.3",
    "typescript": "^4.2.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0"
  }
}
